//- index.jade

//- variables
- var title = "EUscreen Space - Televisio De Catalunya"
- var page  = "profile"

doctype html
html

	//- head
	include ./includes/head.jade

	//- body
	body( data-page="#{page}" )
		
		// header
		include ./includes/header.jade

		// main
		div( role="main" )

			// menu bar
			nav.menubar
				.container
						
					ul
						li.active
							a( href="#" title="#" )
								| Content Provider

			// profile bar
			section.profilebar

				// wrap
				.wrap
					.hue

						//- container
						.container

							// profile box
							.profilebox

								// logo
								.logo
									img( src="img/content/logo-provider-1.png" alt="provider" )

								// title
								.title
									h1
										| Rádio e Televisão de Portugal

								// location
								.location
									| Lisbon, Portugal

							// profile info
							.profileinfo

								// nav
								ul.nav.nav-tabs
									li.active( role="presentation" )
										a( href="#profile-desc"  aria-controls="home" role="tab" data-toggle="tab" )
											| INFO
									li.hidden( role="location" )
										a( href="#profile-location"  aria-controls="location" role="tab" data-toggle="tab" )
											| LOCATION
									li
										a( href="#" title="#" target="_blank")
											| VISIT SITE

								// content
								.tab-content

									// content
									.tab-pane.active( id="profile-desc" role="tabpanel" )

										//- desc
										.description
											| Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
											| tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
											| quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
											| consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
											| cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non
											| proident, sunt in culpa qui officia deserunt mollit anim id est laborum.

									// content
									.tab-pane( id="profile-location" role="tabpanel" )

										//- desc
										.description
											


							// profile map
							.profilemap
								iframe.maps(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d49799.19809751794!2d-9.148874050129908!3d38.730437414892144!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd19331a61e4f33b%3A0x400ebbde49036d0!2sLisbon%2C+Portugal!5e0!3m2!1sen!2sid!4v1438213240742" frameborder="0" style="border:0" allowfullscreen )

			// filter
			include ./includes/filter.jade

			// listing
			include ./includes/listing.jade




		// script
		include ./includes/script.jade