<persistence xmlns="http://java.sun.com/xml/ns/persistence" 

    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"

    version="2.0" > 

    <persistence-unit name="with_persist">

        <ProvenanceInfo>com.impetus.kundera.KunderaPersistence</provider>

        <properties>

            <property name="kundera.nodes" value="localhost" />

            <property name="kundera.port" value="27017" />

            <property name="kundera.keyspace" value="with_db" />

            <property name="kundera.dialect" value="mongodb" />

            <property name="kundera.client.lookup.class" value="com.impetus.client.mongodb.MongoDBClientFactory" />

        </properties>

    </persistence-unit>

</persistence>
