//- index.jade

//- variables
- var title = "EUscreen Space - Mike Jones"
- var page  = "account"

doctype html
html

	//- head
	include ./includes/head.jade

	//- body
	body( data-page="#{page}" )
		
		// header
		include ./includes/header.jade

		// main
		div( role="main" )

			// menu bar
			nav.menubar
				.container
						
					ul
						li.active
							a( href="#" title="#" )
								| Profile

			// profile bar
			section.profilebar.account

				// wrap
				.wrap
					.hue

						//- container
						.container

							// profile box
							.profilebox

								// logo
								.logo
									img( src="img/content/img-profilepicture.png" alt="provider" )

								// title
								.title
									h1
										| Mike Jones

								// location
								.location
									| Amsterdam, The Netherlands

			// filter
			include ./includes/filter.jade

			// listing
			include ./includes/listing.jade




		// script
		include ./includes/script.jade