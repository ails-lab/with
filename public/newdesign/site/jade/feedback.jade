//- index.jade
- var title = "WITH - Feedback & Contact"
- var page  = "Feedback"

doctype html
html

	// head
	include ./includes/head.inc.jade

	// body
	body

		// header
		header
			.wrap
				.container
					a(href="index.html").logo
						img(src="img/ui/logo.png")

					nav
						ul
							li
								a(href="index.html" title="home") HOME
							li
								a(href="search-view.html" title="home") EXPLORE
							li.active
								a(href="about.html" title="home") ABOUT
							li.mobile
								a( href="login.html" class="login") SIGN IN
								a( href="register.html" class="register") REGISTER

					// login
					section.login-section
						a( href="login.html" class="login") SIGN IN
						a( href="register.html" class="register") REGISTER

					// mobile menu trigger
					a.mobile-trigger( href="#" )
						.burger

		// main
		div( role="main" )

			// static page
			.static

				// container
				.container

					// aside
					aside
						ul
							li
								a( href="faq.html" title="Frequently Asked Question" )
									| FAQ
							li
								a( href="terms.html" title="Terms of use" )
									| Terms of use
							li
								a( href="privacy.html" title="Terms of use" )
									| Privacy Policy
							li.active
								a( href="feedback.html" title="Feedback" )
									| Feedback &amp; Contact
					
					// static content
					.staticcontent
						.pads
							// h1
							h1 Frequently Asked Questions
							p
								| We cordially invite you to leave comments or feedback. Your input is valuable as it will allow us to respond to your requests and improve the EUscreen experience. Many thanks in advance for your assistance. 
							hr
							a.btn.btn-alt.btn-contact( href="mailto:tzouvaras@image.ntua.gr" )
								| CONTACT US FOR INQUIRIES
								.left
								.right
								.top
								.bot
							
							
		// footer
		include ./includes/footer.view.jade
			
	// script
	include ./includes/script.inc.jade