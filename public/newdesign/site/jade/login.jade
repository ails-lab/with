- var page  = "Login"

doctype html
html

	// head
	include ./includes/head.inc.jade

	// body
	body

		header
			.wrap
				.container
					a(href="#").logo
						img(src="img/ui/logo.png")

					nav
						ul
							li
								a(href="#" title="home") HOME
							li
								a(href="#" title="home") EXPLORE
							li
								a(href="#" title="home") ABOUT
							li
								a(href="#" title="home") SEARCH
					section.login-section
						a(href="dashboard.html").back GO TO DASHBOARD
		// main
		div( role="main" )

			// viewer mode
			.viewer

				// Login
				section.login.entrance
					.section-header
						.text Sign in
					.section-body 
						a(href="#").fb
							i.fa.fa-facebook-official
							span.text Sign in with Facebook account
						a(href="#").gplus
							i.fa.fa-google-plus
							span.text Sign in with Google account
						.or
							span.text or
						.input-group
							input(type="text" placeholder="Email or username")
							input(type="password" placeholder="Passowrd")
							input(type="checkbox")#login
							label(for="login") Keep me signed in
						.button-group
							a(href="#").btn-green-o Forgot passwrod?
							a(href="#").btn-green Sign in

					
			// footer
			include ./includes/footer.view.jade
			
